<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <control type="group">
            <include>Animation.FadeIn</include>
            <include>Animation.FadeOut</include>
            <left>SidePad</left>
            <top>75</top>
            <width>1600</width>
            <height>360</height>

            <!-- PVR -->
            <control type="group">
                <visible>VideoPlayer.Content(livetv)</visible>
                <width>870</width>
                <height>650</height>
                <control type="image">
                    <texture border="15" diffuse="diffuse/wall-fanart.png" colordiffuse="A6000000">common/rounded-shadow8.png</texture>
                </control>
                <include content="Kodi_Logo">
                    <param name="dimensions" value="30"/>
                    <param name="top" value="44"/>
                    <param name="left" value="45"/>
                </include>
                <control type="grouplist">
                    <left>45</left>
                    <top>23</top>
                    <width>780</width>
                    <itemgap>-21</itemgap>
                    <control type="label">
                        <label>      $LOCALIZE[19005]</label>
                        <left>30</left>
                        <font>Button</font>
                        <textcolor>PanelWhite100</textcolor>
                    </control>
                    <control type="label">
                        <label>$INFO[PVR.ActStreamServiceName,[COLOR Selected]$LOCALIZE[19099]:[/COLOR] ]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="label">
                        <label>$INFO[PVR.ActStreamProviderName,[COLOR Selected]$LOCALIZE[19101]:[/COLOR] ]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="label">
                        <label>$INFO[PVR.ActStreamClient,[COLOR Selected]$LOCALIZE[19012]:[/COLOR] ]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="label">
                        <label>$INFO[PVR.ActStreamDevice,[COLOR Selected]$LOCALIZE[19006]:[/COLOR] ]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="label">
                        <label>$INFO[PVR.ActStreamStatus,[COLOR Selected]$LOCALIZE[19007]:[/COLOR] ]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="label">
                        <label>$INFO[PVR.ActStreamEncryptionName,[COLOR Selected]$LOCALIZE[19015]:[/COLOR] ]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="label">
                        <label>$INFO[PVR.ActStreamBer,[COLOR Selected]$LOCALIZE[19010]:[/COLOR] ]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="label">
                        <label>$INFO[PVR.ActStreamUnc,[COLOR Selected]$LOCALIZE[19011]:[/COLOR] ]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="label">
                        <label>$INFO[PVR.ActStreamMux,[COLOR Selected]$LOCALIZE[19100]:[/COLOR] ]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="label">
                        <label>$INFO[PVR.ActStreamSignal,[COLOR Selected]$LOCALIZE[19008]:[/COLOR] ]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="group">
                        <height>40</height>
                        <control type="progress">
                            <centertop>50%</centertop>
                            <height>10</height>
                            <info>PVR.ActStreamProgrSignal</info>
                        </control>
                    </control>
                    <control type="label">
                        <label>$INFO[PVR.ActStreamSNR,[COLOR Selected]$LOCALIZE[19009]:[/COLOR] ]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="group">
                        <height>40</height>
                        <control type="progress">
                            <centertop>50%</centertop>
                            <height>10</height>
                            <info>PVR.ActStreamProgrSNR</info>
                        </control>
                    </control>
                </control>
            </control>

            <!-- Video -->
            <control type="group">
                <animation effect="slide" start="0,0" end="890,0" time="0" condition="VideoPlayer.Content(livetv)">Conditional</animation>
                <width>870</width>
                <height>463</height>
                <control type="image">
                    <texture border="15" diffuse="diffuse/wall-fanart.png" colordiffuse="A6000000">common/rounded-shadow8.png</texture>
                </control>
                <include content="Kodi_Logo">
                    <param name="dimensions" value="30"/>
                    <param name="top" value="44"/>
                    <param name="left" value="45"/>
                </include>
                <control type="grouplist">
                    <left>45</left>
                    <top>23</top>
                    <width>780</width>
                    <itemgap>-21</itemgap>
                    <control type="label">
                        <label>      $LOCALIZE[291]</label>
                        <left>30</left>
                        <font>Button</font>
                        <textcolor>PanelWhite100</textcolor>
                    </control>
					<control type="label">
						<label>[COLOR Selected]$LOCALIZE[21870]:[/COLOR] $VAR[HDRSourceVar] $VAR[DVProfileVar]$VAR[DVBLCompVar] [COLOR green][B]$VAR[DVELVar][/B][/COLOR]</label>
						<font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
					</control>
                    <control type="label">
                        <label>              $INFO[Player.Process(videowidth)]x$INFO[Player.Process(videoheight)]$INFO[Player.Process(videoscantype)], $INFO[Player.Process(videodar)] AR, [UPPERCASE]$INFO[VideoPlayer.VideoCodec][/UPPERCASE], $INFO[Player.Process(VideoFPS)] FPS,  $INFO[Player.Process(video.bit.depth)] bit, $INFO[VideoPlayer.VideoBitrate] kb/s</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="label">
                        <label>              $VAR[VideoColorSpaceVar] $LOCALIZE[20182], $VAR[VideoColorPrimariesVar] $LOCALIZE[36570], $VAR[VideoColorTransferVar] $LOCALIZE[32000], $VAR[VideoColorRangeVar] $LOCALIZE[32004]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="label">
                        <label>[COLOR Selected]$LOCALIZE[31279]:[/COLOR] [UPPERCASE]$INFO[Player.Process(videodecoder)][/UPPERCASE]$VAR[VideoDecoder, (,)]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="label">
                        <label>[COLOR Selected]$LOCALIZE[16038]:[/COLOR] [CAPITALIZE]$INFO[Player.Process(deintmethod)][/CAPITALIZE]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
					<control type="label">
						<label>[COLOR Selected]$LOCALIZE[32002]:[/COLOR] $VAR[DVVS10Var]</label>
						<font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
					</control>
					<control type="label">
						<label>[COLOR Selected]$LOCALIZE[32001]:[/COLOR] $INFO[Player.Process(amlogic.eoft_gamut)], $INFO[Player.Process(amlogic.displaymode)], $INFO[Player.Process(amlogic.pixformat)]</label>
						<font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
					</control>
					<control type="label">
						<label>[COLOR Selected]$LOCALIZE[462]:[/COLOR] [CAPITALIZE]$INFO[VideoPlayer.SubtitlesLanguage][/CAPITALIZE]</label>
						<font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                        <visible>VideoPlayer.HasSubtitles + VideoPlayer.SubtitlesEnabled</visible>
					</control>
                </control>
            </control>

            <!-- Audio -->
            <control type="group">
                <animation effect="slide" start="0,0" end="0,350" time="0" condition="VideoPlayer.Content(livetv)">Conditional</animation>
                <top>480</top>
                <width>870</width>
                <height>233</height>
                <control type="image">
                    <texture border="15" diffuse="diffuse/wall-fanart.png" colordiffuse="A6000000">common/rounded-shadow8.png</texture>
                </control>
                <include content="Kodi_Logo">
                    <param name="dimensions" value="30"/>
                    <param name="top" value="44"/>
                    <param name="left" value="45"/>
                </include>
                <control type="grouplist">
                    <left>45</left>
                    <top>23</top>
                    <width>780</width>
                    <itemgap>-21</itemgap>
                    <control type="label">
                        <label>      $LOCALIZE[292]</label>
                        <font>Button</font>
                        <textcolor>PanelWhite100</textcolor>
                    </control>
                    <control type="label">
                        <label>[COLOR Selected]$LOCALIZE[21870]:[/COLOR] [CAPITALIZE]$INFO[VideoPlayer.AudioLanguage][/CAPITALIZE], $VAR[AudioCodecVar], $VAR[AudioChannelsVar] ch, $INFO[VideoPlayer.AudioBitrate] kb/s</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="label">
                        <label>[COLOR Selected]$LOCALIZE[32001]:[/COLOR] [UPPERCASE]$INFO[Player.Process(audiodecoder)][/UPPERCASE], $INFO[Player.Process(audiobitspersample),, bits], $INFO[Player.Process(audiosamplerate),, Hz]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                    <control type="label">
                        <label>              $INFO[Player.Process(audiochannels)]</label>
                        <font>Small333</font>
                        <textcolor>PanelWhite70</textcolor>
                    </control>
                </control>
            </control>

            <!-- System -->
            <control type="group">
                <animation effect="slide" start="0,0" end="0,320" time="0" condition="VideoPlayer.Content(livetv)">Conditional</animation>
                <left>890</left>
                <width>870</width>
                <height>570</height>
                <control type="image">
                    <texture border="15" diffuse="diffuse/wall-fanart.png" colordiffuse="A6000000">common/rounded-shadow8.png</texture>
                </control>
                <include content="Kodi_Logo">
                    <param name="dimensions" value="30"/>
                    <param name="top" value="44"/>
                    <param name="left" value="45"/>
                </include>
                <control type="grouplist">
                    <left>45</left>
                    <top>23</top>
                    <width>780</width>
                    <itemgap>-21</itemgap>
                    <control type="label">
                        <label>      $LOCALIZE[13000]</label>
                        <font>Button</font>
                        <textcolor>PanelWhite100</textcolor>
                    </control>
                    <control type="label">
                        <label>[COLOR Selected]$LOCALIZE[144][/COLOR] $INFO[System.BuildVersion]</label>
